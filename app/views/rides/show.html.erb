<%- model_class = Ride -%>
<div class="page-header">
  <h1><%=t '.title', :default => Ride %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:brand) %></dt>
      <dd><pre class="prettyprint"><%= @ride.brand %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:request_time) %></dt>
      <dd><pre class="prettyprint"><%= @ride.request_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:est_wait_time) %></dt>
      <dd><pre class="prettyprint"><%= @ride.est_wait_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pick_time) %></dt>
      <dd><pre class="prettyprint"><%= @ride.pick_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pick_pax) %></dt>
      <dd><pre class="prettyprint"><%= @ride.pick_pax %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pick_address) %></dt>
      <dd><pre class="prettyprint"><%= @ride.pick_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:drop_address) %></dt>
      <dd><pre class="prettyprint"><%= @ride.drop_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:est_duration_at_pick) %></dt>
      <dd><pre class="prettyprint"><%= @ride.est_duration_at_pick %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:picks_en_route) %></dt>
      <dd><pre class="prettyprint"><%= @ride.picks_en_route %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:drops_en_route) %></dt>
      <dd><pre class="prettyprint"><%= @ride.drops_en_route %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cost_before_discounts) %></dt>
      <dd><pre class="prettyprint"><%= @ride.cost_before_discounts %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cost_after_discounts) %></dt>
      <dd><pre class="prettyprint"><%= @ride.cost_after_discounts %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:actual_wait_time) %></dt>
      <dd><pre class="prettyprint"><%= @ride.actual_wait_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:actual_duration) %></dt>
      <dd><pre class="prettyprint"><%= @ride.actual_duration %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              rides_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ride_path(@ride), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ride_path(@ride),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

